<UserControl x:Class="Slicer14_v2.SidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Slicer14_v2"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Background="DarkGray">
        <TextBlock Text="Side Panel" FontWeight="Bold" Margin="10"/>
        <Button Content="Import Model" Margin="10"/>
        <Button Content="Button 2" Margin="10"/>
        <Button Content="Button 3" Margin="10"/>
        <CheckBox Content="Bounding box" Margin="10" IsChecked="{Binding ShowBoundingBox, Mode=TwoWay}"></CheckBox>
    </StackPanel>
</UserControl>
